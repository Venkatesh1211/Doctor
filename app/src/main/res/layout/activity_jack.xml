<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context=".Jake">

    <!-- Doctor's Image -->
    <ImageView
        android:id="@+id/doctorImageButton"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:background="@color/Grevy"
        android:contentDescription="Doctor Image"
        android:src="@drawable/doctor3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Doctor Specialization -->
    <TextView
        android:id="@+id/doctorSpecialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=" Cardiologist"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/doctorImageButton"
        app:layout_constraintTop_toBottomOf="@id/doctorImageButton" />

    <!-- Doctor's Description -->
    <TextView
        android:id="@+id/doctorDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dr. Jack is a highly experienced cardiologist with expertise in treating heart diseases and promoting heart health."
        android:textSize="19sp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#28292B"
        app:layout_constraintTop_toBottomOf="@id/doctorSpecialization"
        app:layout_constraintStart_toStartOf="@id/doctorSpecialization"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Experience -->
    <TextView
        android:id="@+id/doctorExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience: 10 years"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/doctorDescription"
        app:layout_constraintStart_toStartOf="@id/doctorDescription"
        android:layout_marginTop="8dp" />

    <!-- Reviews -->
    <TextView
        android:id="@+id/doctorReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews: 120"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/doctorExperience"
        app:layout_constraintStart_toStartOf="@id/doctorExperience"
        android:layout_marginTop="8dp" />

    <!-- Rating -->
    <TextView
        android:id="@+id/doctorRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: â­ 4.8"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/doctorReviews"
        app:layout_constraintStart_toStartOf="@id/doctorReviews"
        android:layout_marginTop="8dp" />

    <!-- Book Appointment Button -->
    <Button
        android:id="@+id/bookAppointmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#40B19F"
        android:text="Book Appointment"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doctorRating"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
